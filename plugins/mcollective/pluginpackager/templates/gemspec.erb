Gem::Specification.new do |s|
  s.rubyforge_project = "nowarning"
  s.name = "mcollective-<%= @packagename %>-<%= @package_names[@packagetype]%>"
  s.license = "<%= @license %>"
  s.author = "<%= @meta[:author]%>"
  s.version = "<%= @meta[:version]%>"
  s.date = %q{<%= Date.today %>}
  <% if @dependencies && @packagetype != "common"%>
    s.add_dependency("mcollective-<%= @packagename%>-common")
  <% end %>
  <% if @meta[:author] =~ /^.*(\<)(.*)(\>)$/ %>
    s.email = "<%= $2%>"
  <% end %>
  s.description = "<%= @meta[:description]%>\n<%= package_description @packagetype%>"
  s.files = [Dir.glob("lib/mcollective/<%= (@packagetype == "common") ? "util" : @packagetype %>/*")].flatten
  s.homepage = "<%= @meta[:url]%>"
  s.summary = s.description.first
  s.require_paths = ["lib"]
end
